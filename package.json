{
  "name": "my-node-lib",
  "version": "0.0.1",
  "description": "A sample node module library.",
  "homepage": "",
  "author": {
    "name": "Jonnie Spratley",
    "email": "jonniespratley@gmail.com",
    "url": ""
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "files": [
    "src"
  ],
  "main": "src/index.js",
  "keywords": [
    "nodejs"
  ],
  "devDependencies": {
    "@pika/pack": "^0.3.2",
    "@pika/plugin-build-node": "^0.3.11",
    "@pika/plugin-standard-pkg": "^0.3.11",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "jest": "^23.5.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "build": "pack build"
  },
  "repository": "jonniespratley/my-node-lib",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "Apache-2.0"
}
